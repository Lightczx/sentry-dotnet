<Project Sdk="Microsoft.NET.Sdk.Razor">

<PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
</PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Sentry.Extensions.Logging\Sentry.Extensions.Logging.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.0" />
  </ItemGroup>

  <!-- Download JS SDK from CDN: https://docs.sentry.io/platforms/javascript/install/loader/#cdn -->
  <PropertyGroup>
    <SentryJavaScriptVersion>7.64.0</SentryJavaScriptVersion>
  </PropertyGroup>
  <ItemGroup>
    <SentryJavaScriptDownload Include="bundle.debug.min.js" Visible="false" />
    <SentryJavaScriptDownload Include="bundle.debug.min.js.map" Visible="false" />
    <SentryJavaScriptDownload Include="bundle.min.js" Visible="false" />
    <SentryJavaScriptDownload Include="bundle.min.js.map" Visible="false" />
    <SentryJavaScriptDownload Include="bundle.replay.debug.min.js" Visible="false" />
    <SentryJavaScriptDownload Include="bundle.replay.debug.min.js.map" Visible="false" />
    <SentryJavaScriptDownload Include="bundle.replay.min.js" Visible="false" />
    <SentryJavaScriptDownload Include="bundle.replay.min.js.map" Visible="false" />
    <SentryJavaScriptDownload Include="bundle.tracing.debug.min.js" Visible="false" />
    <SentryJavaScriptDownload Include="bundle.tracing.debug.min.js.map" Visible="false" />
    <SentryJavaScriptDownload Include="bundle.tracing.min.js" Visible="false" />
    <SentryJavaScriptDownload Include="bundle.tracing.min.js.map" Visible="false" />
    <SentryJavaScriptDownload Include="bundle.tracing.replay.debug.min.js" Visible="false" />
    <SentryJavaScriptDownload Include="bundle.tracing.replay.debug.min.js.map" Visible="false" />
    <SentryJavaScriptDownload Include="bundle.tracing.replay.min.js" Visible="false" />
    <SentryJavaScriptDownload Include="bundle.tracing.replay.min.js.map" Visible="false" />
  </ItemGroup>
  <Target Name="DownloadSentryJavaScript" BeforeTargets="Build">
    <DownloadFile SourceUrl="https://browser.sentry-cdn.com/$(SentryJavaScriptVersion)/%(SentryJavaScriptDownload.Identity)"
                  DestinationFolder="wwwroot" Condition="!Exists('wwwroot/%(Identity)')" Retries="3">
      <Output TaskParameter="DownloadedFile" ItemName="SentryJavaScriptDownloadedFile" />
    </DownloadFile>
  </Target>
  
  <ItemGroup>
    <InternalsVisibleTo Include="Sentry.AspNetCore.Blazor.Tests" PublicKey="$(SentryPublicKey)" />
  </ItemGroup>

</Project>
